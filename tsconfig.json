{
  "include": ["src/*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-native",
    "strict": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "removeComments": false,
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "index.js",
    "app/App.tsx"
  ]
}
